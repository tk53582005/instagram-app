      <%= link_to "ÊúÄÂàù„ÅÆÊäïÁ®ø„Çí„Åô„Çã", new_post_path,
                  style: "padding: 10px 24px; background: #0095f6; color: white; border-radius: 8px; text-decoration: none; font-weight: 600; display: inline-block;" %>
    </div>
  <% end %>
</div>
